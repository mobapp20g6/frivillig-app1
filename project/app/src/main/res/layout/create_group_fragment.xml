<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.group.CreateGroupFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_group_create_group_constraint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/create_group_data_constraint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/createGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_group_text"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/create_group_data_constraint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/create_group_create_group_constraint"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/create_group_data_vert_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.10" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/create_group_data_hori_guide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05" />

        <TextView
            android:id="@+id/create_group_orgid_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_group_orgid_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/create_group_data_vert_guide"
            app:layout_constraintTop_toTopOf="@+id/create_group_data_hori_guide" />

        <EditText
            android:id="@+id/create_group_org_id_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:hint="@string/create_group_orgid_input_hint"
            android:inputType="phone"
            app:layout_constraintStart_toStartOf="@+id/create_group_data_vert_guide"
            app:layout_constraintTop_toBottomOf="@+id/create_group_orgid_text" />

        <TextView
            android:id="@+id/create_group_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/create_group_name_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/create_group_data_vert_guide"
            app:layout_constraintTop_toBottomOf="@+id/create_group_org_id_input" />

        <EditText
            android:id="@+id/create_group_name_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:hint="@string/create_group_Name_input_hint"
            android:inputType="text"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/create_group_name_text"
            app:layout_constraintTop_toBottomOf="@+id/create_group_name_text"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/create_group_description_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/create_group_description_text"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/create_group_name_input"
            app:layout_constraintTop_toBottomOf="@+id/create_group_name_input" />

        <EditText
            android:id="@+id/create_group_description_input"
            android:layout_width="201dp"
            android:layout_height="75dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="8dp"
            android:autofillHints=""
            android:hint="@string/create_group_description_input_hint"
            android:inputType="textMultiLine"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/create_group_description_text"
            app:layout_constraintTop_toBottomOf="@+id/create_group_description_text" />

        <Button
            android:id="@+id/create_group_cancel_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/create_group_cancel_button_text"
            app:layout_constraintStart_toStartOf="@+id/create_group_data_vert_guide"
            app:layout_constraintTop_toBottomOf="@+id/create_group_description_input" />

        <Button
            android:id="@+id/create_group_create_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="32dp"
            android:text="@string/create_group_create_button_text"
            app:layout_constraintStart_toEndOf="@+id/create_group_cancel_button"
            app:layout_constraintTop_toBottomOf="@+id/create_group_description_input" />

        <Button
            android:id="@+id/create_group_brreg_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="@string/create_group_brreg_button_text"
            app:layout_constraintStart_toEndOf="@+id/create_group_org_id_input"
            app:layout_constraintTop_toTopOf="@+id/create_group_org_id_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
