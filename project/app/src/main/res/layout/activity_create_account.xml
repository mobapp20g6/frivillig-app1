<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.createaccount.CreateAccountActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/nature_garden_grass_lawn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/create_account_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ProgressBar
                android:id="@+id/account_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/create_acc_layout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/create_Account_sub_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="16dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <FrameLayout
                        android:id="@+id/create_acc_frame1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/ic_grass_background_background"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <EditText
                            android:id="@+id/create_acc_first_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="First name"
                            android:inputType="textPersonName" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/create_acc_frame2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/ic_grass_background_background"
                        app:layout_constraintEnd_toEndOf="@+id/create_acc_frame1"
                        app:layout_constraintStart_toStartOf="@+id/create_acc_frame1"
                        app:layout_constraintTop_toBottomOf="@+id/create_acc_frame1">

                        <EditText
                            android:id="@+id/create_acc_last_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Last name"
                            android:inputType="textPersonName" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/create_acc_frame3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/ic_grass_background_background"
                        app:layout_constraintEnd_toEndOf="@+id/create_acc_frame2"
                        app:layout_constraintStart_toStartOf="@+id/create_acc_frame2"
                        app:layout_constraintTop_toBottomOf="@+id/create_acc_frame2">

                        <EditText
                            android:id="@+id/create_acc_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Last name"
                            android:inputType="textPersonName" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/create_acc_frame4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/ic_grass_background_background"
                        app:layout_constraintEnd_toEndOf="@+id/create_acc_frame3"
                        app:layout_constraintStart_toStartOf="@+id/create_acc_frame3"
                        app:layout_constraintTop_toBottomOf="@+id/create_acc_frame3">

                        <EditText
                            android:id="@+id/create_acc_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Password"
                            android:inputType="textPassword" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/frameLayout4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:background="@color/ic_grass_background_background"
                        app:layout_constraintEnd_toEndOf="@+id/create_acc_frame4"
                        app:layout_constraintStart_toStartOf="@+id/create_acc_frame4"
                        app:layout_constraintTop_toBottomOf="@+id/create_acc_frame4">

                        <EditText
                            android:id="@+id/create_acc_verify_pwd"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="10"
                            android:hint="Verify password"
                            android:inputType="textPassword" />
                    </FrameLayout>

                    <Button
                        android:id="@+id/create_acc_create_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@android:color/holo_green_dark"
                        android:text="Create Account"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/create_acc_clear_button"
                        app:layout_constraintTop_toBottomOf="@+id/frameLayout4" />

                    <Button
                        android:id="@+id/create_acc_clear_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/design_default_color_error"
                        android:text="Clear"
                        app:layout_constraintBottom_toBottomOf="@+id/create_acc_create_button"
                        app:layout_constraintEnd_toStartOf="@+id/create_acc_create_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/create_acc_create_button"
                        app:layout_constraintVertical_bias="0.0" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>