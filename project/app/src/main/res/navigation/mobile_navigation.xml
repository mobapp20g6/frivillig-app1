<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="no.ntnu.mobapp20g6.app1.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/nav_gallery"
        android:name="no.ntnu.mobapp20g6.app1.ui.gallery.GalleryFragment"
        android:label="@string/menu_gallery"
        tools:layout="@layout/fragment_gallery" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="no.ntnu.mobapp20g6.app1.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
    <fragment
        android:id="@+id/nav_login"
        android:name="no.ntnu.mobapp20g6.app1.ui.login.LoginFragment"
        android:label="@string/menu_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_nav_login_to_nav_home"
            app:destination="@id/nav_home" />
    </fragment>
    <fragment
        android:id="@+id/nav_account"
        android:name="no.ntnu.mobapp20g6.app1.ui.account.UserAccountFragment"
        android:label="@string/menu_account"
        tools:layout="@layout/fragment_useraccount" >
        <action
            android:id="@+id/action_nav_account_to_nav_login"
            app:destination="@id/nav_login" />
        <action
            android:id="@+id/action_nav_account_self"
            app:destination="@id/nav_account" />
    </fragment>
</navigation>